@model IEnumerable<labRecurso.Models.Plataforma>

@{
    ViewData["Title"] = "Lista de Plataformas";
}

<h1>Lista de Plataformas</h1>
@if (User.IsInRole("Admin") || User.IsInRole("Funcionario"))
{
    <p>
        <a asp-action="Create" asp-controller="Plataformas">Criar Plataforma</a>
</p>

    }
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
