@model IEnumerable<labRecurso.Models.Jogos>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Jogos</h1>
 @if (User.IsInRole("Admin") || User.IsInRole("Funcionario"))
    {
<a asp-action="Create" asp-controller="Jogos">Criar Jogo</a>
    }
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5>
                                    @item.Nome
                                    <a class="text-white float-right"><i class="bi bi-pencil-square"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="/Fotos/Jogos/@item.Foto" width="100%" height="300 px" alt="@item.Nome">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text"> <b>Plataforma: </b>@item.plataforma.Name</p>
                            <p class="card-text"> <b>Categoria: </b>@item.categoria.Nome</p>
                            <p class="card-text"> <b>Preço: </b>@item.Preco €</p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-footer">
                                <a asp-controller="Jogos" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary float-right"><i class="bi bi-eye-fill"></i>Mostrar Detalhes</a>
                                <a asp-controller="PerfilJogos" asp-action="Comprar" asp-route-id="@item.Id" class="btn btn-success text-white float-end"><i class="bi bi-cart-plus"></i> Comprar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>