@model labRecurso.Models.PerfilJogos

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Jogos Comprados</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.perfil)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.perfil.utilizadorId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.jogo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.jogo.Nome)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Voltar</a>
</div>
